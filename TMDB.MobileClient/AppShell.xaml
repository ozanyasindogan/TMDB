<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TMDB.MobileClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:TMDB.MobileClient.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="The Movie Database">

    <ShellItem Route="TMDB.MobileClient.Pages.MainPage" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"/>
    </ShellItem>
    
    <FlyoutItem Title="Upcoming Movies">
        <ShellContent Route="TMDB.MobileClient.Pages.HomePage" ContentTemplate="{DataTemplate pages:HomePage}"/>
    </FlyoutItem>


</Shell>
